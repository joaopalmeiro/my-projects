{
  "name": "my-projects",
  "version": "0.0.0",
  "private": true,
  "description": "An overview of my projects to manage their maintenance.",
  "license": "MIT",
  "author": {
    "name": "JoÃ£o Palmeiro",
    "email": "joaopalmeiro@proton.me",
    "url": "https://github.com/joaopalmeiro"
  },
  "type": "module",
  "scripts": {
    "build": "run-s lint:types build:app",
    "build:app": "vite build",
    "check:ts": "run-s check:tsRoot check:tsApp check:tsNode",
    "check:tsApp": "tsc --project tsconfig.app.json --showConfig",
    "check:tsNode": "tsc --project tsconfig.node.json --showConfig",
    "check:tsRoot": "tsc --showConfig",
    "dev": "vite",
    "format": "run-s format:pkgJson format:tw format:code",
    "format:code": "biome check --write --verbose",
    "format:pkgJson": "sort-package-json",
    "format:tw": "eslint --fix",
    "lint": "run-s lint:pkgJson lint:tw lint:code",
    "lint:code": "biome lint --verbose",
    "lint:pkgJson": "sort-package-json --check",
    "lint:tw": "eslint",
    "lint:types": "tsc -b",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-query": "5.59.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@joaopalmeiro/biome-react-config": "0.5.0",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/parser": "8.11.0",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "10.4.20",
    "create-vite-tsconfigs": "0.4.0",
    "eslint": "9.13.0",
    "eslint-plugin-tailwindcss": "3.17.5",
    "npm-run-all2": "6.2.4",
    "postcss": "8.4.47",
    "sort-package-json": "2.10.1",
    "tailwindcss": "3.4.14",
    "typescript": "5.5.4",
    "vite": "5.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
